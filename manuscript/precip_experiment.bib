	journal = {Ecology},
	author = {Brown, Peter M. and Wu, Rosalind},
	month = nov,
	year = {2005},
	keywords = {dendroecology, density-independent population dynamics, drought, El Niño-Southern Oscillation, fire regimes, tree demography, tree recruitment},
	pages = {3030--3038},
	file = {Full Text PDF:/home/andy/.zotero/zotero/2s1vqz8n.default/zotero/storage/URC5I4T6/Brown and Wu - 2005 - Climate and Disturbance Forcing of Episodic Tree R.pdf:application/pdf;Snapshot:/home/andy/.zotero/zotero/2s1vqz8n.default/zotero/storage/C4VC899P/abstract.html:text/html}
