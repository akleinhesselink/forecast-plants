	file = {Full Text PDF:/home/andy/.zotero/zotero/2s1vqz8n.default/zotero/storage/IFPTVU98/Holthuijzen and Veblen - 2016 - Grazing Effects on Precipitation-Driven Associatio.pdf:application/pdf;Snapshot:/home/andy/.zotero/zotero/2s1vqz8n.default/zotero/storage/4CPU22FA/064.076.html:text/html}
