	month = feb,
	year = {2016},
	keywords = {abundance, Bayesian, climate change, multistate capture-recapture, population growth rate, reproduction, sea ice, survival, Ursus maritimus},
	pages = {n/a--n/a},
	file = {Snapshot:/home/andy/.zotero/zotero/2s1vqz8n.default/zotero/storage/W8DU7CNK/abstract.html:text/html}
